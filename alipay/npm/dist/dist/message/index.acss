.message-index {
    display: block;
    height: initial;
}
.message-index .i-message {
    display: block;
    width: 100%;
    min-height: 32px;
    line-height: 2.3;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: #2d8cf0;
    color: #fff;
    text-align: center;
    font-size: 14px;
    z-index: 1010;
    opacity: 0;
    -webkit-transform: translateZ(0) translateY(-100%);
    transition: all 0.4s ease-in-out;
}

.message-index .i-message-show {
    -webkit-transform: translateZ(0) translateY(0);
    opacity: 1;
}

.message-index .i-message-default {
    background: #2d8cf0;
}

.message-index .i-message-success {
    background: #19be6b;
}

.message-index .i-message-warning {
    background: #f90;
}

.message-index .i-message-error {
    background: #ed3f14;
}
