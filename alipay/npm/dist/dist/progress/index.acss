.progress-index {
    display: block;
    height: initial;
}
.progress-index .i-progress {
    display: inline-block;
    width: 100%;
    font-size: 12px;
    position: relative;
}

.progress-index .i-progress-outer {
    display: inline-block;
    width: 100%;
    margin-right: 0;
    padding-right: 0;
    box-sizing: border-box;
}

.progress-index .i-progress-show-info .i-progress-outer {
    padding-right: 55px;
    margin-right: -55px;
}

.progress-index .i-progress-inner {
    display: inline-block;
    width: 100%;
    background-color: #f3f3f3;
    border-radius: 100px;
    vertical-align: middle;
}

.progress-index .i-progress-bg {
    border-radius: 100px;
    background-color: #2db7f5;
    transition: all 0.2s linear;
    position: relative;
}

.progress-index .i-progress-text {
    display: inline-block;
    margin-left: 5px;
    text-align: left;
    font-size: 1em;
    vertical-align: middle;
}

.progress-index .i-progress-active .i-progress-bg:before {
    content: "";
    opacity: 0;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #fff;
    border-radius: 10px;
    animation: i-progress-active 2s ease-in-out infinite;
}

.progress-index .i-progress-wrong .i-progress-bg {
    background-color: #ed3f14;
}

.progress-index .i-progress-wrong .i-progress-text {
    color: #ed3f14;
}

.progress-index .i-progress-success .i-progress-bg {
    background-color: #19be6b;
}

.progress-index .i-progress-success .i-progress-text {
    color: #19be6b;
}

@keyframes i-progress-active {
    0% {
        opacity: 0.3;
        width: 0;
    }

    100% {
        opacity: 0;
        width: 100%;
    }
}
