<view class="i-class i-checkbox" catchtap="checkboxChange">
    <i-cell i-class="i-checkbox-cell">
        <radio id='iview-checkbox-{{value}}' value="{{value}}" checked="{{checked}}" color="{{checked?color:''}}" disabled="{{disabled}}" class="i-checkbox-radio {{positionCls}}" />
        <label for='iview-checkbox-{{value}}'>            
            <view class="i-checkbox-title">{{value}}</view>
        </label>
    </i-cell>
</view>
