<view class="i-class i-radio" catchtap="radioChange">
    <i-cell i-class="i-radio-cell">
     <radio id='iview-radio-{{value}}' value="{{value}}" checked="{{checked}}" color="{{checked?color:''}}" disabled="{{disabled}}" class="i-radio-radio {{positionCls}}" />
        <label for='iview-radio-{{value}}'>          
            <view class="i-radio-title">{{value}}</view>
        </label>
    </i-cell>
</view>
