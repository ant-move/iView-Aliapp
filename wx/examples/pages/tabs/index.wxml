<i-panel title="基本用法"></i-panel>

<i-tabs current="{{ current }}" bindchange="handleChange">
    <i-tab ikey="tab1" title="选项1"></i-tab>
    <i-tab ikey="tab2" title="选项2"></i-tab>
    <i-tab ikey="tab3" title="选项3"></i-tab>
</i-tabs>

<i-panel title="自定义主题色"></i-panel>

<i-tabs current="{{ current }}" color="#f759ab" bindchange="handleChange">
    <i-tab ikey="tab1" title="选项1"></i-tab>
    <i-tab ikey="tab2" title="选项2"></i-tab>
    <i-tab ikey="tab3" title="选项3"></i-tab>
</i-tabs>

<i-panel title="徽标"></i-panel>

<i-tabs current="{{ current }}" bindchange="handleChange">
    <i-tab ikey="tab1" title="选项1" count="3"></i-tab>
    <i-tab ikey="tab2" title="选项2"></i-tab>
    <i-tab ikey="tab3" title="选项3" dot></i-tab>
</i-tabs>

<i-panel title="滚动"></i-panel>

<i-tabs current="{{ current_scroll }}" scroll bindchange="handleChangeScroll">
    <i-tab ikey="tab1" title="选项1"></i-tab>
    <i-tab ikey="tab2" title="选项2"></i-tab>
    <i-tab ikey="tab3" title="选项3"></i-tab>
    <i-tab ikey="tab4" title="选项4"></i-tab>
    <i-tab ikey="tab5" title="选项5"></i-tab>
    <i-tab ikey="tab6" title="选项6"></i-tab>
    <i-tab ikey="tab7" title="选项7"></i-tab>
    <i-tab ikey="tab8" title="选项8"></i-tab>
    <i-tab ikey="tab9" title="选项9"></i-tab>
</i-tabs>